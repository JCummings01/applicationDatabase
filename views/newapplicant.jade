extends layout

block content
  .applicant-container
    h1 Application for #{info.name}
    .list-container
      ul.list-group
        li.list-group-item Name: #{info.name}
        li.list-group-item Bio: #{info.bio}
        li.list-group-item Skills: #{info.skills}
        li.list-group-item Experience: #{info.years}
        li.list-group-item Reason: #{info.why}
        a.btn.btn-default#back(href="/applicants") &laquo; Back to Applicants